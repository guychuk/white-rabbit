{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",                                  

    /* Modules */
    "module": "ESNext",                               
    "rootDir": ".",                                 
    "moduleResolution": "node",                     
    "baseUrl": "./",                                  
    "paths": {"*": ["./*", "./typescript/*"]},            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true                                    
  },
  "include": [
    "**/*.ts", "**/*.js"
  ],
  "exclude": [
    "typescript/tests",
    "typescript/jest.config.ts"
  ]
}
